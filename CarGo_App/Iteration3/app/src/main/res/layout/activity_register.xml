<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/welcome"/>
                <ImageView
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="230dp"
                    android:src="@drawable/carsmall"
                    android:layout_width="150dp"
                    android:layout_height="120dp" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Welcome,"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="110dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Please fill below \ntocomplete Registration"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:layout_marginTop="195dp"
                    android:background="@drawable/sh6">

                    <EditText
                        android:id="@+id/NameText1"
                        android:layout_width="325dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/textborder"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:padding="15dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/UsernameText1"
                        android:layout_width="325dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="110dp"
                        android:background="@drawable/textborder"
                        android:hint="Username"
                        android:inputType="textPersonName"
                        android:padding="15dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/EmailText1"
                        android:layout_width="325dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="190dp"
                        android:background="@drawable/textborder"
                        android:hint="Email"
                        android:inputType="textWebEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/PhoneText1"
                        android:layout_width="325dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="270dp"
                        android:background="@drawable/textborder"
                        android:hint="Phone"
                        android:inputType="number"
                        android:padding="15dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/PasswordText1"
                        android:layout_width="325dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="350dp"
                        android:background="@drawable/textborder"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="57dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="430dp"
                        android:background="@drawable/roundedgreen" />

                    <TextView
                        android:id="@+id/ButtonTextRegister"
                        android:layout_width="165dp"
                        android:layout_height="57dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="430dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="Register"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="20sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>